I = imread('lenna.png');
imshow(I);
[W, channels] = splitChannels(I);

function [W, channels] = splitChannels(I)
    [n, m, channels] = size(I);
    W = uint8(zeros(n, m * channels, 3));
    for i = i:channels
        W(:, m * (i - 1) + 1 : m * i, :) = channel(I, i);
    end
end

function W = channel(I, channel_num)
    W = I;
    [~, ~, channels] = size(I);
    for i = 1:channels
    end
end
